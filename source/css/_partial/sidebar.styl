}

.profile__avatar__img{
  width: 96px;
  height: 96px;
  border: 2px #fff solid;
  border-radius: 50%;
}

.profile__name{
  display: block;
  font-size: 18pt;
}

.profile__sign{
  margin: 20px 0;
  display: inline-block;
}

.social{
