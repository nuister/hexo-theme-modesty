.sidebar{
  display: none;
  width: 0;
  position: fixed;
  padding: 48px 0;
  top: 0;
  bottom: 0;
  left: 0;
  background: #333333;
  z-index: 999;
  color: #FFFFFF;
  box-shadow: inset -3px -3px 10px rgba(51, 51, 51, 0.35);
  // background: url("/modesty/source/img/sidebar-bg.jpg") no-repeat;
  &>div{
    h5{
      margin 0.2em 0
      color #999999
    }
  }
  .tags-wrap{
    a{
      background-color: rgba(0, 0, 0, 0.5);
      font-size: 12px!important;
      color: #fff;
      padding: 4px;
      border-radius: 3px;
      margin: 0 4px 0 0;
      border-bottom: 0;
      transition: all 0.2s ease-in-out;
      &:hover{
        border: 0;
        background-color: #333;
      }
    }
  }
}

.ts{
  text-shadow: 0 0 20px #333;
  color: #fff;
}

.profile{
  text-align: center;
}

