.border-spread {
  position: relative;
  float: left;
  width: 15px;
  height: 15px;
}

.border-spread__item {
  position: absolute;
  border-radius: 50%;
  &.spread-1 {
    width: 8px;
    height: 8px;
    z-index: 3;
    top: 5px;
    left: 5px;
    background: #dddddd;
  }
  &.spread-2 {
    width: 12px;
    height: 12px;
    z-index: 2;
    top: 3px;
    left: 3px;
    display: none;
    background: #999999;
  }
  &.spread-3 {
    width: 16px;
    height: 16px;
    z-index: 1;
    top: 1px;
    display: none;
    left: 1px;
    background: #dddddd;
  }
}

// 动画开始
@keyframes spread3 {
  0% {
    background: $spread-color3;
    width: $spread2-size;
    height: $spread2-size;
    left: 3px;
    top: 3px;
  }
  100% {
    background: transparent;
    width: $spread3-size;
    height: $spread3-size;
    left: 1px;
    top: 1px;
  }
}

@keyframes spread2 {
  0% {
    background: $spread-color2;
    width: $spread1-size;
    height: $spread1-size;
    left: 5px;
    top: 5px;
  }
  100% {
    background: transparent;
    width: $spread2-size;
    height: $spread2-size;
    left: 3px;
    top: 3px;
  }
}

@-webkit-keyframes spread3 {
  0% {
    background: $spread-color3;
    width: $spread2-size;
    height: $spread2-size;
    left: 3px;
    top: 3px;
  }
  100% {
    background: transparent;
    width: $spread3-size;
    height: $spread3-size;
    left: 1px;
    top: 1px;
  }
}

@-webkit-keyframes spread2 {
  0% {
    background: $spread-color2;
    width: $spread1-size;
    height: $spread1-size;
    left: 5px;
    top: 5px;
  }
  100% {
    background: transparent;
    width: $spread2-size;
