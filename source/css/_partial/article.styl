.main-container{
  margin: 0 auto;
  margin-top: 48px;
  width: 700px;
  @media mq-mobile {
    width: 100%;
    padding-top: 0.1em;
  }
  @media mq-tablet {
    width: 100%;
    padding-top: 0.1em;
  }
}

.post-article{
  margin-bottom 10px;
  padding: 10px 30px 20px;
  background: #fff;
  box-shadow: 0 1px 1px 0 rgba(0,0,0,0.15);
  border-radius: 2px;
  @media mq-mobile {
    padding: 1em;
  }
  @media mq-tablet {
    padding: 1em;
  }

}

.post-article__title{
  @media mq-mobile {
  text-align: center
}
  @media mq-tablet {
    text-align: center
  }
}

.post-article__link{
  border-bottom: none;
  @media mq-mobile {
  text-align: center
}
  @media mq-tablet {
    text-align: center
  }
}

.post-meta{
  font-size: 12px;
  margin 10px 0;
  @media mq-mobile {
  text-align: center
  }
  @media mq-tablet {
    text-align: center
  }
  i{
    margin: 0 4px;
  }
}

.post-meta__time{
  color: $lighten-grey;
}

.post-meta__tags{
  a::before{
    content: "#"
  }
  .article-tag{
    display: inline-block;
  }
}

.post-meta__comment-count{

}

.post-content{
  h1,h2,h3{
    font-weight: 500;
  }

    img{
      max-width:100%;
      height: auto;
      @media mq-mobile {
        max-width:100%;
      }
      @media mq-tablet {
        max-width:100%;
      }
    }

  @media mq-mobile {
  }
  @media mq-tablet {
  }
}

.post-more-link{
  text-align: right;
  a{
    padding: 6px 8px;
  }
}

.post-nav{
  clearfix()
  margin: 30px 0 10px;
  padding: 6px 0 0 0;
  border-top: 1px #ddd solid;
  a{
    color: $lighten-grey;
    &:hover{
      color: #5b5b5b;
    }
  }
}

.post-nav__next{
  float: right;
}

.post-nav__prev{
  float: left;
}