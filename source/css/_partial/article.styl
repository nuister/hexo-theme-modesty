.main-container{
  margin: 0 auto;
  padding-top: 48px;
  width: 700px;
  @media (max-width: 767px){
    width: 100%;
  }
}

.post-article{
  margin-bottom 20px
}

.post-article__title{
  @media mq-mobile {
  text-align: center
}
  @media mq-tablet {
    text-align: center
  }
}

.post-article__link{
  border-bottom: none;
  @media mq-mobile {
  text-align: center
}
  @media mq-tablet {
    text-align: center
  }
}

.post-meta{
  font-size: 12px;
  margin 10px 0;
  @media mq-mobile {
  text-align: center
  }
  @media mq-tablet {
    text-align: center
  }
  i{
    margin: 0 4px;
  }
}

.post-meta__time{
  color: $lighten-grey;
}

.post-meta__tags{
  a::before{
    content: "#"
  }
  .article-tag{
    display: inline-block;
  }
}

.post-meta__comment-count{

}

.post-content{
  h1,h2,h3{
    font-weight: 500;
  }

  @media mq-mobile {
    background #f5f5f5
    padding 1em
    border-radius 3px
  }
  @media mq-tablet {
    background #f5f5f5
    padding 1em
    border-radius 3px
  }
}

.post-more-link{
  text-align: right;
  a{
    padding: 6px 8px;
  }
}

.post-nav{
  clearfix()
  margin: 30px 0 10px;
  padding: 6px 0 0 0;
  border-top: 1px #ddd solid;
  a{
    color: $lighten-grey;
    &:hover{
      color: #5b5b5b;
    }
  }
}

.post-nav__next{
  float: right;
}

.post-nav__prev{
  float: left;
}